<div
  class="<%= component_class_names %>"
  role="alert"
  data-controller="snackbar-component"
  data-snackbar-component-hidden-class="hidden"
  data-snackbar-component-visible-class="opacity-100"
  data-snackbar-component-fading-out-class="transition-opacity duration-300 opacity-0"
>
  <div class="text-sm"><%= @message %></div>

  <div class="flex items-center gap-3">

    <% if action %>
      <%= action %>
    <% end %>
    <% if @close_button %>
      <div class='me-1'>
        <button
          type="button"
          class="
            relative p-2 rounded-full ms-auto interactive-bg-inverse-surface
            focus:outline-none
          "
          data-action="snackbar-component#close"
        >
          <span class="sr-only"><%= t("actions.close") %></span>
          <%= inline_svg_tag("icons/x-mark.svg") %>
        </button>
      </div>
    <% end %>
  </div>

</div>
