<li
  data-controller="favorite"
  data-favorite-mode-number-value="<%= scale.mode_number %>"
  class="scale-outlet"
  data-favorite-shown-class="block"
  data-favorite-hidden-class="hidden"
>
  <input type="radio" name="scale" id="<%= dom_id(scale) %>" class="hidden peer"/>
  <label
    for="<%= dom_id(scale) %>"
    class="
      flex flex-col gap-2 p-4 sm:border border-gray-200 sm:rounded-lg cursor-pointer
      peer-checked:border-primary-600 hover:bg-gray-100
      peer-checked:shadow-[0_0_0_2px] peer-checked:shadow-primary-500
      dark:border-gray-600 dark:hover:bg-gray-700
    "
  >
    <div class="text-sm sm:text-lg sm:font-medium"><%= scale.common_name %></div>

    <input
      type="checkbox"
      data-action="favorite#addOrRemoveFavorite"
      data-favorite-target="checkbox"
    />

    <%= render(DegreesScaleComponent.new(scale: scale, scale_settings: scale_settings)) %>
  </label>
</li>
