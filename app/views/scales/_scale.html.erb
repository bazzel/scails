    for="<%= dom_id(scale) %>"
    class="flex flex-col gap-2 p-4 sm:border border-gray-200 sm:rounded-lg cursor-pointer peer-checked:border-primary-600 hover:bg-gray-100 peer-checked:shadow-[0_0_0_2px] peer-checked:shadow-primary-500 dark:border-gray-600 dark:hover:bg-gray-700"
