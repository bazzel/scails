<div
  class="fixed z-10 flex items-center justify-between h-12 pl-4 rounded shadow-md  bg-inverse-surface pe-2 bottom-5 left-5 right-5 sm:w-full sm:max-w-lg"
  role="alert"
  data-controller="snackbar-component"
  data-snackbar-component-hidden-class="hidden"
  data-snackbar-component-visible-class="opacity-100"
  data-snackbar-component-fading-out-class="transition-opacity duration-300 opacity-0"
>
  <div class="text-sm"><%= @message %></div>

  <div class="flex items-center gap-3">

    <% if action %>
      <%= action %>
    <% end %>
    <% if @close_button %>
      <div class='me-1'>
        <button
          type="button"
          class="relative p-2 rounded-full  ms-auto interactive-bg-inverse-surface focus:outline-none"
          data-action="snackbar-component#close"
        >
          <span class="sr-only"><%= t("actions.close") %></span>
          <%= inline_svg_tag("icons/x-mark.svg") %>
        </button>
      </div>
    <% end %>
  </div>

</div>
