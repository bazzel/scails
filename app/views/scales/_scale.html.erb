<li
  data-controller="pin delete"
  data-pin-mode-number-value="<%= scale.mode_number %>"
  data-delete-mode-number-value="<%= scale.mode_number %>"
  class="scale-outlet sm:mb-2 sm:last:mb-0"
  data-pin-hidden-class="hidden"
  data-delete-hidden-class="hidden"
>
  <input type="radio" name="scale" id="<%= dom_id(scale) %>" class="hidden peer"/>
  <label
    for="<%= dom_id(scale) %>"
    class="
      flex flex-col gap-2 p-4 transition cursor-pointer sm:border
      border-outline-variant sm:rounded-lg
      md:peer-checked:border-surface-container-highest md:hover:shadow
      peer-checked:bg-surface-container-highest bg-surface
      hover:bg-surface-container-low md:hover:border-surface-container-low
    "
  >
    <div class="flex justify-between group">
      <div class="flex justify-start gap-1">
        <h2 class="text-sm sm:text-lg sm:font-medium"><%= scale.common_name %></h2>
        <%= render partial: "aliases", locals: { scale: scale } %>
      </div>
      <div class="flex invisible group-hover:visible">
        <%= render partial: "scales/delete", locals: { scale: scale } %>
        <%= render partial: "scales/pin", locals: { scale: scale } %>
      </div>
    </div>

    <%= render(DegreesScaleComponent.new(scale: scale, scale_settings: scale_settings)) %>
  </label>
</li>
