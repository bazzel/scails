<%- if scale.aliases.any? %>
  <%= render(RichTooltipComponent.new(title: t('.title'))) do |tooltip| %>
    <% tooltip.with_tooltip do %>
      <p><%= t(".also_known_as", aliases: scale.aliases.to_sentence) %></p>
    <% end %>
    <%= inline_svg_tag(
      "icons/question-mark-circle.svg",
      class: "w-5 h-5 text-on-surface-variant",
    ) %>
  <% end %>
<% end %>
